<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".TrainingNavigation">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wybierz traning:"
        android:textSize="40dp" />

    <Button
        android:id="@+id/select_core_training"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:tag="CORE"
        android:text="Trening mięśni tułowia" />

    <Button
        android:id="@+id/select_stretch_training"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:tag="STRETCH"
        android:text="Rozciąganie" />

    <Button
        android:id="@+id/select_training_history"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Dziennik" />

</LinearLayout>